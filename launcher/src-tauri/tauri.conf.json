{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "launcher",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": true,
        "execute": true,
        "open": true,
        "scope": [
          {
            "name": "console-memory",
            "cmd": "./dispel-multi",
            "args": [
              "console",
              "--console-addr",
              {
                "validator": "\\S+"
              },
              "--database-type",
              "memory"
            ]
          },
          {
            "name": "console-sqlite",
            "cmd": "./dispel-multi",
            "args": [
              "console",
              "--console-addr",
              {
                "validator": "\\S+"
              },
              "--database-type",
              "sqlite",
              "--sqlite-path",
              {
                "validator": "\\S+"
              }
            ]
          },
          {
            "name": "backend",
            "cmd": "./dispel-multi",
            "args": [
              "backend",
              "--console-addr",
              {
                "validator": "\\S+"
              },
              "--backend-addr",
              {
                "validator": "\\S+"
              }
            ]
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.tauri.dev",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "launcher",
        "width": 1050,
        "height": 850
      }
    ]
  }
}
